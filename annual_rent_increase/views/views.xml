        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_add_annual_increase_id" model="ir.ui.view">
            <field name="name">sale.order.add.annual.increase</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <!-- Add your fields or attributes here -->
                    <button name="get_annual_invoice"
                            type="object"
                            class="oe_stat_button"
                            string="Annual Invoice"
                            attrs="{'invisible':[('state','not in',['sale','done'])]}"
                            icon="fa-star">
                    </button>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <!-- Add your fields or attributes here -->
                    <page name="annual_increase" string="Annual Increase">

                        <group>
                            <field name="date_from" attrs="{'readonly':[('invoice_status','in',['sale','done'])]}"/>
                            <field name="date_to" attrs="{'readonly':[('invoice_status','in',['sale','done'])]}"/>
                        </group>
                        <field name="annual_increase_ids" attrs="{'readonly':[('invoice_status','in',['sale','done'])]}">
                            <tree editable="bottom">
                                <field name="name" invisible="1"/>
                                <field name="date" optional="show"/>
                                <field name="percent" optional="show"/>
                                <field name="amount" optional="show" sum="Total"/>
                                <field name="state" readonly="1" force_save="1" optional="show"/>
                                <field name="sale_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
