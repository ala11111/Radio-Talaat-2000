<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.cron" id="add_button_sale_journal_entry_view">
            <field name="name">Sale Journal Entry</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_sale_order"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="state">code</field>
            <field name="code">model.button_sale_journal_entry()</field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_add_annual_increase_id" model="ir.ui.view">
            <field name="name">sale.order.add.annual.increase</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <!-- Add your fields or attributes here -->
                    <button name="get_annual_invoice"
                            type="object"
                            class="oe_stat_button"
                            string="Annual Invoice"
                            attrs="{'invisible':[('invoice_status','!=','invoiced')]}"
                            icon="fa-star">
                    </button>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <!-- Add your fields or attributes here -->
                    <page name="annual_increase" string="Annual Increase">

                        <group>
                            <field name="date_from" attrs="{'readonly':[('invoice_status','=','invoiced')]}"/>
                            <field name="date_to" attrs="{'readonly':[('invoice_status','=','invoiced')]}"/>
                        </group>
                        <field name="annual_increase_ids">
                            <tree editable="bottom">
                                <field name="name" invisible="1"/>
                                <field name="date" optional="show"/>
                                <field name="percent" optional="hide"/>
                                <field name="amount" optional="show"/>
                                <field name="state" readonly="1" force_save="1" optional="show"/>
                                <field name="sale_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>